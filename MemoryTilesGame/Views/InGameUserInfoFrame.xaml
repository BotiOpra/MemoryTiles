<UserControl x:Class="MemoryTilesGame.Views.InGameUserInfoFrame"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MemoryTilesGame.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Border>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Label Grid.Row="0" Content="{Binding Level}" />
            <Image Grid.Row="1" Source="{Binding ProfileImage}" />
            <Label Grid.Row="2" Content="{Binding Username}" />
        </StackPanel>
    </Border>
</UserControl>
